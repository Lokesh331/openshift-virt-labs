default vesamenu.c32
timeout 600

label bootstrap
  menu label Install OCP4 Bootstrap
  kernel http://192.168.123.100:81/rhcos.kernel
  append initrd=http://192.168.123.100:81/rhcos.initramfs ip=dhcp rd.neednet=1 console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.install_dev=vda coreos.inst.image_url=http://192.168.123.100:81/rhcos.raw.gz coreos.inst.ignition_url=http://192.168.123.100:81/bootstrap.ign

label master
  menu label Install OCP4 Master
  kernel http://192.168.123.100:81/rhcos.kernel
  append initrd=http://192.168.123.100:81/rhcos.initramfs ip=dhcp rd.neednet=1 console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.install_dev=vda coreos.inst.image_url=http://192.168.123.100:81/rhcos.raw.gz coreos.inst.ignition_url=http://192.168.123.100:81/master.ign

label worker
  menu label Install OCP4 Worker
  kernel http://192.168.123.100:81/rhcos.kernel
  append initrd=http://192.168.123.100:81/rhcos.initramfs ip=dhcp rd.neednet=1 console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.install_dev=vda coreos.inst.image_url=http://192.168.123.100:81/rhcos.raw.gz coreos.inst.ignition_url=http://192.168.123.100:81/worker.ign

label local
